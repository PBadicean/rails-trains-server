<%= form_for(@car) do |f| %>
  <%= render 'common/errors', resource: @car %>

  <div class="field">
    <%= f.label :car_type%>
    <%= f.collection_select :car_type_id, CarType.all, :id, :name%>
  </div>

  <div class="field">
    <%= f.label :top_places %>
    <%= f.number_field :top_places %>
  </div>

  <div class="field">
    <%= f.label :bottom_places %>
    <%= f.number_field :bottom_places %>
  </div>

  <div class="field">
    <%= f.label :train%>
    <%= f.collection_select :train_id, Train.all, :id, :number%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
