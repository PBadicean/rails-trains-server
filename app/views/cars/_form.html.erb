<%= form_for [@train, @car.becomes(Car)] do |f| %>
  <%= render 'common/errors', resource: @car %>

  <div class="field">
    <%= f.label :type, 'Тип вагона'%>
    <%= f.select :type, ['CoupeCar', 'EconomeCar', 'SedenteryCar', 'SleepCar'] %>
  </div>

  <div class="field">
    <%= f.label :top_seats, 'Верхние места' %>
    <%= f.number_field :top_seats %>
  </div>

  <div class="field">
    <%= f.label :bottom_seats, 'Нижние места' %>
    <%= f.number_field :bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :side_top_seats, 'Верхние боковые места' %>
    <%= f.number_field :side_top_seats %>
  </div>

  <div class="field">
    <%= f.label :side_bottom_seats, 'Нижние боковые места' %>
    <%= f.number_field :side_bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :sedentery_seats, 'Сидячие места' %>
    <%= f.number_field :sedentery_seats %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
