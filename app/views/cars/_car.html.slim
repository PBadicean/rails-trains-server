- @train.sorted_cars.each do |car|
  tr
    td= car.number
    td= car.type
    td= link_to 'Паказать', train_car_path(@train, car)
    td= link_to 'Редактировать', edit_train_car_path(@train, car)
    td
      = link_to 'Удалить',
        train_car_path(@train, car),
        method: :delete,
        data:  { confirm: 'Вы уверены?' }
