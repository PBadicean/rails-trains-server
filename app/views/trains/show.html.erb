<p id="notice"><%= notice %></p>

<p>
  <strong>Номер:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>На станции:</strong>
  <% if @train.current_station.present? %>
    <%= @train.current_station.title %>
  <% else %>
    Не указано
  <% end %>
</p>

<p>
  <strong>Маршрут:</strong>
  <% if @train.route.present? %>
    <%= @train.route.name %>
  <% else %>
    Не указан
  <% end %>
</p>

<p>
<table style="width:50%">
  <tr>
    <th> Вагон </th>
    <th>Верхние места:</th>
    <th>Нижние места:</th>
  </tr>
    <% @train.cars.each do |car| %>
  <tr>
    <th><%= car.car_type.name %></th>
    <th><%= car.top_places %></th>
    <th><%= car.bottom_places %></th>
  </tr>
  <% end %>
</table>

<style>
table, th, td {
    border: 1px solid black;
}
</style>
</p>
<%= link_to 'Редактировать', edit_train_path(@train) %> |
<%= link_to 'Назад', trains_path %>
